{% extends 'admin/base.html.twig' %}

{% block title %} Administration des Commentaires {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modification du commentaire n°{{ comment.id }}</h1>

        <div class="row">
            <div class="col">
                    <div class="alert alert-info">
                        <strong>Annonce liée :</strong> {{ comment.ad.title }}<br>
                        <strong>Auteur :</strong> {{ comment.author.fullName }}<br>
                        <strong>Date de creation : </strong> {{ comment.createAt |date('d/m/Y H:i') }}<br>
                        <strong>Note donnée :</strong> {{ comment.rating }}
                    </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h6 class="my-2">Contenu commentaire</h6>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check"></i>Enrégistrer les modifications
                </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}