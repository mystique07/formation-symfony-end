{% extends 'admin/base.html.twig' %}

{% block title %} Administration Des Utilisateurs {% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Administation Utilisateurs</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Pr√©nom & Nom</th>
                    <th>Email</th>
                    <th>Introduction</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>
                        <img src="{{ user.picture}}" style="max-width: 24px; max-height: 24px; margin-right: 2em;" alt="{{ user.fullName }}">
                        {{ user.fullName }}
                    </td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.introduction }}</td>
                    <td>{{ user.description }}</td>
                    <td>
                        <a href="#" class="btn btn-primary">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a href="#" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}